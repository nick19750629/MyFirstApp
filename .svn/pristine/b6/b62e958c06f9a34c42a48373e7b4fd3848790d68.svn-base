<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:background="@android:color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60dp"
        android:id="@+id/txtBlank" />

    <TextView
        android:text="单词总量"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBlank"
        android:id="@+id/txtSum" />

    <TextView
        android:text="学习的单词数"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSum"
        android:id="@+id/txtRecite" />

    <TextView
        android:text="正确的次数"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRecite"
        android:id="@+id/txtCorrect" />

    <TextView
        android:text="错误的次数"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCorrect"
        android:id="@+id/txtMistake" />

    <TextView
        android:text="总次数"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMistake"
        android:id="@+id/txtTimes" />

</RelativeLayout>